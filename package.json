{
    "name": "adobe-extension-devtools",
    "displayName": "Adobe Extension Development Tools",
    "description": "provide some useful tools for adobe extension development",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:adobeExtensionDevtools.helloWorld"
    ],
    "main": "./out/src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "adobeExtensionDevtools.helloWorld",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "17.0.0",
        "@types/vscode": "^1.63.1",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "@vscode/test-electron": "^2.0.0",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.3.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.5.4"
    }
}
