{
    "name": "adobe-extension-devtools",
    "displayName": "Adobe Extension Development Tools",
    "description": "provide some useful tools for adobe extension development",
    "version": "0.0.1",
    "publisher": "YuTengjing",
    "engines": {
        "vscode": "^1.63.1"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tjx666/adobe-extension-devtools"
    },
    "keywords": [
        "adobe",
        "CEP",
        "ExtendScript",
        "jsx",
        "AE",
        "AfterEffects"
    ],
    "activationEvents": [
        "onLanguage:javascript"
    ],
    "main": "./out/src/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "aeProjectOutline",
                    "name": "AE Project Outline"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "jsonOutline.refresh",
                    "when": "view == aeProjectOutline",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "adobeExtensionDevtools.refreshAeProjectOutline",
                "title": "Refresh AE Project Outline",
                "icon": "$(extensions-refresh)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "17.0.0",
        "@types/vscode": "^1.63.1",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "@vscode/test-electron": "^2.0.0",
        "after-effects": "^0.4.15",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.3.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "types-for-adobe": "^6.0.1",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "escape-string-applescript": "^2.0.0",
        "execa": "^5.1.1"
    }
}
